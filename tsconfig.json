{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "module": "es2020",
    "jsx": "react-jsx",
    "declaration": true
  },
  "files": ["index.ts", "tailwind.ts"],
  "include": ["core/**/*", "react/**/*", "widgets/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
